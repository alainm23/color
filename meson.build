project('com.github.alainm23.color', 'vala', 'c')

gnome = import('gnome')
i18n = import('i18n')

conf = configuration_data()
conf.set_quoted('GETTEXT_PACKAGE', meson.project_name())
configure_file(output: 'config.h', configuration: conf)
config_h_dir = include_directories('.')

c_args = [
  '-include', 'config.h'
]

add_global_arguments('-DGETTEXT_PACKAGE="' + meson.project_name() + '"', language:'c')

asresources = gnome.compile_resources(
    'as-resources', 'data/' + meson.project_name() + '.gresource.xml',
    source_dir: 'data',
    c_name: 'as'
)

executable(
    meson.project_name(),
    asresources,
    'src/Application.vala',
    'src/MainWindow.vala',
    'src/Widgets/Headerbar.vala',
    'src/Widgets/Color.vala',
    'src/Widgets/FormatButton.vala',
    'src/Widgets/ActionBar.vala',
    'src/Widgets/PaletteButton.vala',
    'src/Widgets/Popovers/Color.vala',
    'src/Widgets/Popovers/Palette.vala',
    'src/Services/Settings.vala',
    'src/Dialogs/Preferences.vala',
    dependencies: [
        dependency('gee-0.8'),
        dependency('glib-2.0'),
        dependency('granite'),
        dependency('gtk+-3.0'),
        meson.get_compiler('c').find_library('m', required : false)
    ],
    install: true
)

subdir('data')
#subdir('po')
meson.add_install_script('meson/post_install.py')
